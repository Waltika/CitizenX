{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "types": ["jest", "@testing-library/jest-dom", "chrome", "node"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "paths": {
      "@/*": ["*"],
      "@orbitdb/core": ["types/orbitdb-core"]
    }
  },
  "include": ["src/**/*", "jest.setup.js"],
  "exclude": ["node_modules", "dist"]
}