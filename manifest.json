{
  "manifest_version": 3,
  "name": "CitizenX",
  "version": "1.0.0",
  "description": "A Chrome extension for decentralized web annotations using OrbitDB",
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ],
  "options_ui": {
    "page": "https://waltika.github.io/CitizenX/active-content/"
  }
}