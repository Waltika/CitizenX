{
  "manifest_version": 3,
  "name": "CitizenX",
  "version": "1.0.0",
  "description": "A Chrome extension for web annotations using OrbitDB",
  "permissions": [
    "tabs",
    "storage",
    "activeTab" // Added for content script to access the active tab
  ],
  "action": {
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"], ^
      "js": ["content/walletConnector.js"]
    }
  ]
}