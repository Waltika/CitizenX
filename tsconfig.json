{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "types": ["jest", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["*"],
      "@orbitdb/core": ["src/types/orbitdb-core"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}