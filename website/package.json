    "react-dom": "^18.2.0",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "@citizenx/shared": "file:../shared"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/cookie" : "latest",
    "@types/cors": "latest",
    "@types/express": "^4.17.17",
    "@types/node": "^20.17.30",
    "@types/gun": "latest",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "vite": "^5.4.18",
