{
  "manifest_version": 3,
  "name": "CitizenX",
  "version": "1.0.0",
  "description": "A Chrome extension for decentralized web annotations using OrbitDB. Permissions: 'storage' to save user data, 'sidePanel' for the UI.",
  "permissions": [
    "sidePanel",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' ws: wss:"
  },
  "privacy_policy": "https://yourwebsite.com/privacy-policy"
}