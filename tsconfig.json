{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": "src",
    "types": ["node", "@types/react", "@types/react-dom"]
  },
  "include": ["src/**/*",
    "src/__tests__/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}