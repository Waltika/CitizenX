{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "express", "jsonwebtoken", "cookie-parser", "react", "react-dom"]
  },
  "include": ["*.tsx", "*.ts", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}