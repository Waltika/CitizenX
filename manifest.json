{
  "manifest_version": 3,
  "name": "CitizenX",
  "version": "1.0",
  "description": "Decentralized web annotation extension",
  "permissions": ["sidePanel", "storage", "tabs", "activeTab"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ]
}
